<div class="container">
  <main>
    <div class="py-5 text-center">
      <h2>Address Details Form</h2>
      <p class="lead">Please provide your address details:</p>
    </div>
  </main>
  <div class="container mt-4">
<%= form_with(model: @ads,url: address_path, local: true) do |f| %>
      <!-- First set of address details -->
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <%= f.label :door_number %>
            <%= f.text_field :door_number, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= f.label :floor_number %>
            <%= f.text_field :floor_number, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :building_name %>
            <%= f.text_field :building_name, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Second set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :street_name %>
            <%= f.text_field :street_name, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :area %>
            <%= f.text_field :area, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Third set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :post %>
            <%= f.text_field :post, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :village_town %>
            <%= f.text_field :village_town, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Fourth set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :pincode %>
            <%= f.text_field :pincode, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :landmark %>
            <%= f.text_field :landmark, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Fifth set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :district %>
            <%= f.text_field :district, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Sixth set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :country %>
            <%= f.text_field :country, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Seventh set of address details -->
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :continent %>
            <%= f.text_field :continent, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :current_address %>
            <%= f.text_area :current_address, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="row">
        <div class="col-md-12">
            <a href="<%= office_path %>" class="btn btn-success ml-3">Next</a>
        </div>
      </div>
    <% end %>
  </div>
</div>