
<%=render 'shared/navbar'%>

    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal text-body-emphasis">Welcome</h1>
      <p class="fs-5 text-body-secondary">This is a Simple user Management project</p>
    </div>

    <div class="container d-flex align-items-center justify-content-center">
    <%= link_to form_path do %>
      <button class="btn btn-primary btn-lg" type="button">Add User</button>
    <% end %>

     <%= form_tag(search_path, method: :get, class: "search-form") do %>

    <div class="inner-form">

      <div class="input-group">

        <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Enter id to search ") %>

        <%= submit_tag('Search', class: "btn btn-primary") %>
      </div>
    </div>

  <% end %>
    </div>

<div class="search-results m-5 text-dark p-5">
    <% if @results.any? %>

      <h3>Search Results:</h3>

      <ul>

        <% @results.each do |result| %>

          <li>

            <strong>Employee:</strong> <%= result['Employee'].first %>
          </li>
            <br>
          <li>
            <strong>Company:</strong> <%= result['Company'].first %>
          </li>
            <br>
          <li>
            <strong>Branch:</strong> <%= result['Branch'].first %>


          </li>

        <% end %>

      </ul>

    <% end %>

  </div>

   